@model Book 
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Book</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
            <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Publisher"></label>
            <input asp-for="Publisher" class="form-control" />
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Writer"></label>
            <input asp-for="Writer" class="form-control" />
            <span asp-validation-for="Writer" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SubCategory"></label>
            @Html.DropDownListFor(x => x.SubCategoryId, (List<SelectListItem>)ViewBag.subCategorySelectListItems, new { @class = "form-control"})
            <span asp-validation-for="SubCategory" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px;">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
