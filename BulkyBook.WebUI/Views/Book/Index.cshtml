@model IEnumerable<Book>
@{
    ViewData["Title"] = "Book List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Book
            </a>
        </div>
    </div>
    <br /> <br />
    <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Book Name</th>
                    <th>Publisher</th>
                    <th>Writer</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Publisher</td>
                        <td>@item.Writer</td>
                        <td>@item.SubCategory?.Category?.Name</td>
                        <td>@item.SubCategory?.Name</td>
                        <td>@item.Price ₺</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>